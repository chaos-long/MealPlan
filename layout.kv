                    bar_color: 1,1,1,1
                    bar_inactive_color: 1,1,1,1
                    MDBoxLayout:
                        orientation: 'vertical'
                        id:tab3
                        size_hint_y: None
                        height: self.minimum_height

<Product>:
    width: Window.width*.6
