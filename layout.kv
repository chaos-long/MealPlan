            on_release:
                app.root.current = "all"
                app.root.transition.direction = "up"
                root.viewdessert()
        Lab:
            size_hint: .385,.2
            pos_hint: {"center_x":.8, "center_y":.1}
            text: "Món chay"
            color: 1,1,1,1
            halign: "center"
            #font_name: "BPoppins"
            canvas.before:
                Color:
                    rgb: 1,1,1,1
                RoundedRectangle:
                    size: self.size
