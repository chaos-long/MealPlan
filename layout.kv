                    size_hint_x: None
                    width: self.minimum_width
                    GridLayout:
                        id: meal
                        rows: 1
                        size_hint_x: None
                        width: self.minimum_width
        MDLabel:
            text: "Mục khác:"
            color: get_color_from_hex("#000000")
            font_style: 'H6'
            pos_hint: {"x":0.02, "center_y":.43}
        Lab:
            text: "Buổi sáng"
            color: 1,1,1,1
            size_hint: .385,.2
            pos_hint: {"center_x":.2, "center_y":.31}
            halign: "center"
            canvas.before:
                Color:
                    rgb: 1,1,1,1
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [10]
                    source: "icons_and_images/Classic Steak & Eggs Breakfast with Avocado and Tomato.png"
            on_release:
                app.root.current = "all"
                app.root.transition.direction = "up"
                root.viewbreakfast()
