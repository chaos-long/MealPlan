                    radius: [10]
                    source: "icons_and_images/Veggie Sausage with Herbed Polenta Fries & Tomato-Arugula Salad.png"
            on_release:
                app.root.current = "all"
                app.root.transition.direction = "up"
                root.viewveta()
        BoxLayout:
            pos_hint: {"center_x":.5, "center_y": .1}
            size_hint: .00005,.7
            canvas:
                Color:
                    rgba: .1, .1, 1, .9
                Line:
                    width: 2.
                    rectangle: (self.x, self.y, self.width, self.height)



    MDScreen:
        id: all
        name: "all"
        BoxLayout:
            orientation: "vertical"
            size_hint_y: .9
            pos_hint: {"top":.9}
            ScrollView:
                do_scroll_x: False
                bar_color: 1,1,1,1
                bar_inactive_color: 1,1,1,1
                BoxLayout:
