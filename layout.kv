#:import Window kivy.core.window.Window
#:import get_color_from_hex kivy.utils.get_color_from_hex
<My>:
    id: scr
    orientation: "vertical"
    MDScreen:
        md_bg_color: get_color_from_hex("#58D68D")
        name: 'splash'
        Image:
            source: "icons_and_images/logo.png"
            pos_hint: {"center_x":.5, "center_y":.5}
    MDScreen:
        name: 'main'
        MDBottomNavigation:
            id: bar100
            panel_color: 1,1,1,1
            text_color_active: get_color_from_hex("#14BA4C")
            MDBottomNavigationItem:
                name: "meal"
                text: "Bữa ăn"
                icon: "silverware-fork-knife"
                MDFloatLayout:
                    MDIconButton:
                        icon: "settings-helper"
                        pos_hint: {"top":1, "right":1}
                        on_release:
                            root.setting2()
                    BoxLayout:
                        orientation: "vertical"
                        size_hint_y: .9
                        pos_hint: {"top":.9}
                        ScrollView:
                            do_scroll_x: False
                            bar_color: 1,1,1,1
                            bar_inactive_color: 1,1,1,1
                            BoxLayout:
                                orientation: "vertical"
                                size_hint_y: None
                                height: self.minimum_height
                                GridLayout:
                                    id: ck
                                    cols: 2
                                    size_hint_y: None
                                    height: self.minimum_height
                MDFloatLayout:
                    id: f1
                    MDLabel:
                        font_style: 'H5'
                        color: get_color_from_hex("#000000")
                        pos_hint: {"center_y": .625}
                        text: "Kế hoạch ăn uống của bạn"
                        halign: "center"
                    MDLabel:
                        font_style: 'H6'
                        pos_hint: {"center_y": .525}
                        color: get_color_from_hex("#ACACAC")
                        text: "Lên kế hoạch bữa ăn của bạn cho cả tuần chỉ trong vài phút. Xây dựng bữa ăn của bạn để bắt đầu!"
                        halign: "center"
                    MDFlatButton:
                        size_hint: .85,.07
                        pos_hint: {"center_x":.5,"center_y":.375}
                        text: "Xây dựng bữa ăn của bạn"
                        theme_text_color: "Custom"
                        text_color: 1,1,1,1
                        md_bg_color: get_color_from_hex("#14BA4C")
                        font_size: "18sp"
                        on_release:
                            app.root.current = 'build'
                            app.root.transition.direction = 'up'



            MDBottomNavigationItem:
                name: "list"
                text: "Giỏ hàng"
                icon: "cart-variant"
                MDIconButton:
                    icon: "settings-helper"
                    pos_hint: {"top":1, "right":1}
                    on_release:
                        root.setting()
                MDLabel:
                    text: "Giỏ hàng"
                    font_style: 'H5'
                    pos_hint: {"center_y":.85, "x":.05}
                    color: get_color_from_hex("#000000")
                MDBoxLayout:
                    size_hint: 1,.7
                    pos_hint: {"center_y":.45}
                    MDScrollView:
                        MDList:
                            id:list

            MDBottomNavigationItem:
                name: "favourite"
                text: "Yêu thích"
                icon: "book-heart-outline"
                MDLabel:
                    text: "Yêu thích"
                    font_style: 'H5'
                    pos_hint: {"center_y":.85, "x":.05}
                    color: get_color_from_hex("#000000")
                MDBottomNavigationItem:
                    name: "favourite"
                    text: "Yêu thích"
                    icon: "book-heart-outline"
                    MDIconButton:
                        icon: "settings-helper"
                        pos_hint: {"top":1, "right":1}
                        on_release:
                            root.setting3()
                    MDLabel:
                        text: "Yêu thích"
                        font_style: 'H5'
                        pos_hint: {"center_y":.85, "x":.05}
                        color: get_color_from_hex("#000000")
                    BoxLayout:
                        orientation: "vertical"
                        size_hint_y: .8
                        pos_hint: {"top":.8}
                        ScrollView:
                            do_scroll_x: False
                            bar_color: 1,1,1,1
                            bar_inactive_color: 1,1,1,1
                            BoxLayout:
                                orientation: "vertical"
                                size_hint_y: None
                                height: self.minimum_height
                                GridLayout:
                                    id: fav
                                    cols: 2
                                    size_hint_y: None
                                    height: self.minimum_height
    MDScreen:
        name: 'build'
        #MDFloatLayout:
            #size_hint: .8,.09
            #pos_hint: {"center_x":.55, "center_y":.94}
            #md_bg_color: get_color_from_hex("#D0D3D4")
